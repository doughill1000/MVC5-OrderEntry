                        @Html.LabelFor(model => separation.CustDesignName, new { @class = "label-colon" })
                    </div>
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => separation.CustDesignName, new { @class = "shortInput" })
                        @Html.ValidationMessageFor(model => separation.CustDesignName)
                    </div>
                </div>
