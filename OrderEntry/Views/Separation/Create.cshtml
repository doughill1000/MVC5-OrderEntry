                        @Html.ValidationMessageFor(model => separation.Comments)
                    </div>
                </fieldset>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
