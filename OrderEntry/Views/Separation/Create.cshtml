                        @Html.ValidationMessageFor(model => separation.DesignName)
                    </div>
                </div>

                <div class="col-md-3 col-md-offset-1">
                    <div class="col-md-4">
                        @Html.LabelFor(model => separation.Owner, new { @class = "label-colon" })
                    </div>
                    <div class="col-md-8">
